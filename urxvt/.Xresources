!URXVT SETTINGS
URxvt.scrollBar: false
URxvt.internalBorder: 7
URxvt.iso14755: false
URxvt.cursorBlink: 0
URxvt.cursorUnderline: 0

!FONTS
*font: xft:Inconsolata for Powerline:size=10,xft:Symbola:size=9
*boldfont: xft:Inconsolata for Powerline:bold:size=10
*italicfont: xft:DejaVuSansMono-Oblique:size=9
*.letterSpace: -1
!bitmap
!*.font:      -*-terminus-medium-r-*-*-20-*-*-*-*-*-*-*
!*.boldfont:  -*-terminus-bold-*-*-*-20-*-*-*-*-*-*-*
!*.italicfont:-*-terminus-medium-*-*-*-20-*-*-*-*-*-*-*
!*.bolditalicfont:-*-terminus-bold-*-*-*-20-*-*-*-*-*-*-*

!XFT FONTS
Xft.antialias:  1
Xft.autohint:   0
Xft.dpi:        92
Xft.hinting:    1
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

! URL handling
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! Copypaste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Transparency
! URxvt.transparent: true
! URxvt.shading: 20

